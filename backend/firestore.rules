rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Calls collection: solo utenti autenticati possono leggere le proprie chiamate
    match /calls/{callId} {
      allow read: if request.auth != null 
        && resource.data.user_id == request.auth.token.email;
      allow write: if false; // Solo backend Cloud Function scrive
    }
    
    // Users collection: ogni utente pu√≤ leggere/modificare solo il proprio profilo
    match /users/{userId} {
      allow read, write: if request.auth != null 
        && request.auth.token.email == userId;
    }
    
    // Tutto il resto: blocca
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

